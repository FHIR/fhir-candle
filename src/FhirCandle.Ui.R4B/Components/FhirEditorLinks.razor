<MudItem xs="2">

@switch (ResourceType)
{
    case "SearchParameter":
    case "SubscriptionTopic":
    case "StructureMap":
    case "StructureDefinition":
    case "Questionnaire":
    case "Library":
        <MudButton
            Size="Size.Small"
            Variant="Variant.Filled"
            Color="Color.Primary"
            Href="@($"https://dev.fhirpath-lab.com/SubscriptionTopic?id={BaseUrl}/{ResourceType}/{Id}")" 
            Target="_blank"
        >Edit in FHIRPath Lab</MudButton>

        break;
}

</MudItem>

@code {
    [Parameter]
    public string BaseUrl { get; set; } = string.Empty;

    [Parameter]
    public string ResourceType { get; set; } = string.Empty;

    [Parameter]
    public string Id { get; set; } = string.Empty;
}