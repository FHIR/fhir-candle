@using Microsoft.FluentUI.AspNetCore.Components;

@if (!string.IsNullOrEmpty(FhirPathLabUrl))
{
    <FluentGridItem xs="2">

        @* Size="Size.Small" *@

    @switch (ResourceType)
    {
        case "SearchParameter":
        case "SubscriptionTopic":
        case "StructureMap":
        case "StructureDefinition":
        case "Questionnaire":
        case "Library":
            <FluentAnchor
                Appearance="Appearance.Accent"
                Href="@($"{FhirPathLabUrl}/SubscriptionTopic?id={BaseUrl}/{ResourceType}/{Id}")" 
                Target="_blank">Edit in FHIRPath Lab</FluentAnchor>
            break;
    }

    </FluentGridItem>
}

@code {
    [Parameter]
    public string BaseUrl { get; set; } = string.Empty;

    [Parameter]
    public string ResourceType { get; set; } = string.Empty;

    [Parameter]
    public string Id { get; set; } = string.Empty;

    [Parameter]
    public string FhirPathLabUrl { get; set; } = string.Empty;
}