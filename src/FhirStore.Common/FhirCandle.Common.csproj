<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\fhir-candle.props" />

  <PropertyGroup>
    <LangVersion>12.0</LangVersion>
    <TargetFramework>net8.0</TargetFramework>
    <!--<TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>-->
